---
import "../styles/reset.css";
import "../styles/style.scss";
import Header from "./Header.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="vertical-lign container"></div>
		<Header></Header>
		<main>
			<slot />

		</main>
	</body>
</html>

<style lang="scss">
	@use "../styles/style" as *; 
	
	body{
		position: relative;

	}
	
	.vertical-lign{
		position: absolute;
		inset: 0;
		
		$line-size: 4px;
		$start: calc(($logo-size/2) - ($line-size / 2));
		$end: calc(($logo-size/2) + ($line-size / 2));
		background-image: linear-gradient(to right, transparent calc($start - 1px), $white $start, $white $end, transparent calc($end + 1px))

	}

	main{
		background-color: $purple-700;
		height: 100vh;
		/*Trar essa height*/
	}
</style>
