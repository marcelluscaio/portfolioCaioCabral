---
import type { HeadingLevel } from "../../types/headingLevel";

type Props = {
	technologies: string[];
	headingLevel: HeadingLevel;
};

const { technologies, headingLevel } = Astro.props;

const Heading = headingLevel;

const isInCard = ["h3", "h4"].includes(headingLevel) ? "isInCard" : "";
---

<div class=`list regular-text--medium ${isInCard}`>
	<Heading class="regular-text--medium">Technologies:</Heading>
	<ul class="regular-text--medium">
		{
			technologies.map((tech) => {
				return <li class="regular-text--medium">{tech}</li>;
			})
		}
	</ul>
</div>

<style lang="scss">
	@use "../../styles/style.scss" as *;
	.list {
		display: flex;
		flex-wrap: wrap;
		column-gap: 0.5em;

		margin-bottom: 0.5em;

		ul {
			display: flex;
			flex-wrap: wrap;
			column-gap: 0.25em;

			li::after {
				content: ",";
			}

			li:nth-last-child(2)::after {
				content: "";
			}

			li:last-child::after {
				content: ".";
			}

			li:last-child::before {
				content: " and ";
			}

			li:first-child::before {
				content: "";
			}
		}
	}

	.isInCard *::selection {
		background-color: $purple-700;
		color: $purple-300;
	}
</style>
