<style lang="scss">
@use "../../../styles/style.scss" as *;

.button{
  
}

section{
  --imgRadius: calc(1vw + .25rem);
  --articlePadding: max(var(--text-paddingInline-small), var(--fs-1));
  --articleRadius: calc(var(--imgRadius) + var(--articlePadding));
  --sectionPadding: max(var(--text-paddingInline-regular), var(--fs-1));
  --sectionRadius: calc(var(--articleRadius) + var(--sectionPadding));
  
  padding: var(--sectionPadding);
  border-radius: var(--sectionRadius); /* (ajustar para desktop e para max-width) */

  background-color: $white;

  color: $purple-700;

  & > div{
    display: grid;
    gap: var(--sectionPadding);

    margin-bottom: calc(var(--sectionPadding) * 2);

    & > :nth-child(2n){
      background-color: $purple-700;

      color: $purple-300;
    }
  }

  & > a{
    --padding: .75em;

    display: block;

    max-width: 25ch;
    padding: var(--padding) 1.5em;
    padding-bottom: calc(var(--padding) + .25em);
    margin-top: .75em;
    margin-inline: auto;
    border-radius: 100vmax;

    background-color: $purple-700;

    color: $white;
    line-height: 1;
    text-align: center;
  }
}

h2{
  margin-bottom: .5em;

  text-align: center;
}

article{
  display: flex;
  flex-direction: column;
  gap: var(--articlePadding);  
  
  padding: var(--articlePadding);
  border-radius: var(--articleRadius);

  background-color: $purple-300;
  & > div{
    h3{
      margin-bottom: .5em;
    }
    .list{
      display: flex;
      flex-wrap: wrap;
      column-gap: .5em;

      margin-bottom: .5em;

      ul{
        display: flex;
        flex-wrap: wrap;
        column-gap: .25em;

        li::after{
          content: ",";
        }

        li:last-child::before{
          content: " and ";
         } 

        li:last-child::after{
          content: ".";
         } 

         li:first-child::before{
          content: "";
         }
      }
    }
    p{
      span{
        font-weight: 700;
      }
      &::first-letter{
        font-size: var(--fs-3);      
      }
      
    }
  }

  img{
    width: 100%;
    aspect-ratio: 1 /2;
    max-height: 50vh;
    object-fit: cover;
    object-position: top 0 left 10%;
    border-radius: var(--imgRadius);
  }

  & > a{
    align-self: center;
    
    --padding: .75em;
    padding: var(--padding) 1.5em;
    padding-bottom: calc(var(--padding) + .25em);
    margin-top: .75em;
    border-radius: 100vmax;

    background-color: $white;

    color: $purple-700;
    line-height: 1;
    text-align: center;
  }
}

@media (min-width: 40em){
  section{
    & > div{
      grid-template-columns: repeat(auto-fit, minmax(max(48ch, 30%), 1fr));
    }
  }

  article{
    h3{
      text-align: center;
    }
    img{
      aspect-ratio: 16/9;
    }
  }
}
</style>